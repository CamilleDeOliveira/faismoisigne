<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Date</th>
      <th>Heure</th>
      <th>User</th>
      <th>Lieu</th>  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.nom %></td>
        <td><%= event.date %></td>
        <td><%= event.heure %></td>
        <td><%= event.user_id %></td>
        <td><%= event.lieu %></td>
        <td><%= link_to 'Afficher', event %></td>
        <% if user_signed_in? && event.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

